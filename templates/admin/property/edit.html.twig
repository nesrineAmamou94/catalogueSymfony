{% extends 'base.html.twig' %}

{% block title %}Editer le bien {% endblock %}
{% block body %}
    <div class="containe mt-4">
        <h2>Editer le bien</h2>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-2">{{ form_row(form.title) }}</div>
            <div class="col-md-2">{{ form_row(form.surface) }}</div>
            <div class="col-md-2">{{ form_row(form.price) }}</div>
        </div>
        <div class="row">
            <div class="col-md-2">{{ form_row(form.rooms) }}</div>
            <div class="col-md-2">{{ form_row(form.bedrooms) }}</div>
            <div class="col-md-2">{{ form_row(form.heat) }}</div>
            <div class="col-md-2">{{ form_row(form.floor) }}</div>
        </div>
        <div class="row">
            <div class="col-md-2">{{ form_row(form.address) }}</div>
            <div class="col-md-2">{{ form_row(form.city) }}</div>
            <div class="col-md-2">{{ form_row(form.postal_code) }}</div>
            <div class="col-md-2 mt-4">{{ form_row(form.sold) }}</div>
        </div>
        <div class="row">
            <div class="col-md-3">{{ form_row(form.description) }}</div>
            {#<div class="col-md-3">{{ form_row(form.created_at)}}</div>#}
        </div>

        {{ form_rest(form) }}
        <button class="btn btn-primary">Editer</button>
        {{ form_end(form) }}
    </div>

{% endblock %}